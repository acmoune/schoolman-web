{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "*": [
        "../node_modules/*"
      ]
    },
    "typeRoots": [
      "../node_modules/@types"
    ],

    "module": "commonjs",
    "sourceMap": false,
    "outDir": "build",
    "lib": [
      "es2015",
      "es2016",
      "esnext"
    ]
  },

  "include": [
    "src/**/*"
  ],

  "compileOnSave": false
}
